<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="Fragment 02"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/btnNav01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textTitle"
        android:text="Go to fragment 02"
        android:layout_marginTop="10dp"
        />


    <Button
        android:id="@+id/btnNav02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnNav01"
        android:text="Go to fragment 03"
        android:layout_marginTop="10dp"
        />


    <Button
        android:id="@+id/btnNav03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnNav02"
        android:text="Go to fragment 01"
        android:layout_marginTop="10dp"
        />


    <Button
        android:id="@+id/nextActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnNav03"
        android:text="Go second activity"
        android:layout_marginTop="10dp"
        />



</RelativeLayout>